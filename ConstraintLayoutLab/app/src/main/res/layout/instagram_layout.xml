<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/imageView5"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:text="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@color/colorPrimaryDark"
        android:id="@+id/imageView6"
        android:layout_width="384dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"/>

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/imageView7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:color/holo_orange_light"
        android:id="@+id/imageView8"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView7"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/colorActivatedHighlight"
        tools:layout_editor_absoluteY="341dp"
        tools:layout_editor_absoluteX="197dp"
        android:id="@+id/imageView9"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:text="# of likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView11"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@android:color/black"
        android:id="@+id/imageView11"
        app:layout_constraintLeft_toLeftOf="@+id/imageView7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"/>

    <TextView
        android:text="TextView"
        android:layout_width="352dp"
        android:layout_height="108dp"
        android:id="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="@+id/imageView11"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>
</android.support.constraint.ConstraintLayout>